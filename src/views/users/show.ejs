<!DOCTYPE html>
<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
        <% include ../static/partials/messages.ejs %>
        <h1 class="title is-2">
            <%= `${user.username}'s profile` %>
        </h1>
        <h5 class="subtitle is-4">
            <%= `Email: ${user.email}` %>
        </h5>
        <hr>
        <h2 class="title is-2">Your Lists</h2>
        <a href="/lists/new" class="button is-success"><i class="fas fa-plus" style="padding-right: 5px"></i>New
            List</a>
        <hr>
        <ul class="list">
            <% if(lists) { %>
            <% lists.forEach((list) => { %>
            <li>
            <li class="list-item">
                <a href="/lists/<%= list.id %>">
                    <%= list.title %>
                </a>
                <span>[
                    <%= list.private ? 'private' : 'public' %>]</span>
            </li>
            <% }) %>
            <% } %>
        </ul>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
</body>