<!DOCTYPE html>
<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body>
    <% include ../static/partials/navbar.ejs %>
    <% include ../static/partials/messages.ejs %>

    <main class="container">

        <h1>New List</h1>

        <form action="/lists/create" method="post">
            <div class="form-group">
                <label for="title">List title:</label>
                <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter list title">
            </div>
            <div class="form-group">
                <label for="description">List description:</label>
                <textarea rows="4" class="form-control" name="description" placeholder="Enter short list description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>